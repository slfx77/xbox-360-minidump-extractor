<?xml version="1.0" encoding="utf-8"?>

<Application
  x:Class="Xbox360MemoryCarver.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
      </ResourceDictionary.MergedDictionaries>

      <!--  Override accent button text color for better contrast with dark accent colors  -->
      <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">
          <SolidColorBrush x:Key="AccentButtonForeground" Color="White" />
          <SolidColorBrush x:Key="AccentButtonForegroundPointerOver" Color="White" />
          <SolidColorBrush x:Key="AccentButtonForegroundPressed" Color="#C0FFFFFF" />
          <SolidColorBrush x:Key="AccentButtonForegroundDisabled" Color="#60FFFFFF" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
          <SolidColorBrush x:Key="AccentButtonForeground" Color="White" />
          <SolidColorBrush x:Key="AccentButtonForegroundPointerOver" Color="White" />
          <SolidColorBrush x:Key="AccentButtonForegroundPressed" Color="#C0FFFFFF" />
          <SolidColorBrush x:Key="AccentButtonForegroundDisabled" Color="#60FFFFFF" />
        </ResourceDictionary>
      </ResourceDictionary.ThemeDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
