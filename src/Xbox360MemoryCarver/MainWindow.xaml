<?xml version="1.0" encoding="utf-8"?>

<Window
  x:Class="Xbox360MemoryCarver.App.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="using:Microsoft.UI.Xaml.Controls"
  xmlns:local="using:Xbox360MemoryCarver.App"
  Title="Xbox 360 Memory Carver">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!--  Custom title bar - compact, transparent for Mica  -->
    <Grid
      x:Name="AppTitleBar"
      Grid.Row="0"
      Height="40"
      Background="Transparent">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>

      <!--  App icon  -->
      <Image
        Grid.Column="0"
        Width="16"
        Height="16"
        Margin="12,0,0,0"
        VerticalAlignment="Center"
        Source="Assets/StoreLogo.png" />

      <!--  App title - vertically centered with tabs  -->
      <TextBlock
        Grid.Column="1"
        Margin="-12,6,0,0"
        VerticalAlignment="Center"
        FontSize="12"
        Text="Xbox 360 Memory Carver" />

      <!--  Tab strip area - fixed width tabs  -->
      <controls:TabView
        x:Name="MainTabView"
        Grid.Column="2"
        Margin="8,0,0,0"
        VerticalAlignment="Stretch"
        Background="Transparent"
        IsAddTabButtonVisible="False"
        SelectedIndex="0"
        TabWidthMode="Equal">
        <controls:TabView.Resources />
        <controls:TabView.TabStripHeader>
          <Grid
            x:Name="TabStripDragRegion"
            Background="Transparent" />
        </controls:TabView.TabStripHeader>
        <controls:TabView.TabItems>
          <controls:TabViewItem
            Header="Single File"
            IsClosable="False" />
          <controls:TabViewItem
            Header="Batch Mode"
            IsClosable="False" />
        </controls:TabView.TabItems>
      </controls:TabView>

      <!--  Caption buttons spacer (min/max/close)  -->
      <Grid
        x:Name="CaptionButtonsSpacer"
        Grid.Column="3"
        Width="138"
        Background="Transparent" />
    </Grid>

    <!--  Main content area  -->
    <Grid
      Grid.Row="1"
      Background="Transparent">
      <local:SingleFileTab
        x:Name="SingleFileTabContent"
        Visibility="Visible" />
      <local:BatchModeTab
        x:Name="BatchModeTabContent"
        Visibility="Collapsed" />
    </Grid>
  </Grid>
</Window>
