<?xml version="1.0" encoding="utf-8"?>

<UserControl
  x:Class="Xbox360MemoryCarver.HexMinimapControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!--  Legend (populated dynamically from FileTypeColors.LegendCategories)  -->
    <Border
      Grid.Row="0"
      Margin="0,0,0,4"
      Padding="4,2"
      Background="#FF1E1E1E"
      CornerRadius="2">
      <StackPanel
        x:Name="LegendPanel"
        HorizontalAlignment="Center"
        Orientation="Horizontal"
        Spacing="8" />
    </Border>

    <!--  Minimap Canvas  -->
    <Border
      Grid.Row="1"
      Padding="2"
      Background="#FF2D2D2D"
      CornerRadius="4">
      <Canvas
        x:Name="MinimapCanvas"
        Background="#FF252526" />
    </Border>
  </Grid>
</UserControl>
