<?xml version="1.0" encoding="utf-8"?>

<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!--
    Shared styles for tab layouts across the application.
    Import via: <ResourceDictionary Source="ms-appx:///App/Styles/TabStyles.xaml"/>
    -->

  <!-- Standard card container style -->
  <Style x:Key="CardBorderStyle"
         TargetType="Border">
    <Setter Property="Padding"
            Value="8" />
    <Setter Property="Background"
            Value="{ThemeResource CardBackgroundBrush}" />
    <Setter Property="CornerRadius"
            Value="8" />
  </Style>

  <!-- Dark card style (for hex viewer, etc.) -->
  <Style x:Key="DarkCardBorderStyle"
         TargetType="Border">
    <Setter Property="Padding"
            Value="8" />
    <Setter Property="Background"
            Value="#FF1E1E1E" />
    <Setter Property="CornerRadius"
            Value="8" />
  </Style>

  <!-- Column header container style -->
  <Style x:Key="ColumnHeaderGridStyle"
         TargetType="Grid">
    <Setter Property="Margin"
            Value="0,0,0,4" />
    <Setter Property="Padding"
            Value="8,4" />
    <Setter Property="Background"
            Value="{ThemeResource SystemControlBackgroundListLowBrush}" />
    <Setter Property="CornerRadius"
            Value="4" />
  </Style>

  <!-- Sortable column header button style -->
  <Style x:Key="SortableColumnHeaderButtonStyle"
         TargetType="Button">
    <Setter Property="Padding"
            Value="0" />
    <Setter Property="HorizontalAlignment"
            Value="Left" />
    <Setter Property="Background"
            Value="Transparent" />
    <Setter Property="BorderThickness"
            Value="0" />
  </Style>

  <!-- Sort icon style -->
  <Style x:Key="SortIconStyle"
         TargetType="FontIcon">
    <Setter Property="FontSize"
            Value="10" />
    <Setter Property="Glyph"
            Value="" />
    <Setter Property="Visibility"
            Value="Collapsed" />
  </Style>

  <!-- Standard progress bar style (collapsed by default, positioned above I/O) -->
  <Style x:Key="TabProgressBarStyle"
         TargetType="ProgressBar">
    <Setter Property="Margin"
            Value="0,12,0,0" />
    <Setter Property="Visibility"
            Value="Collapsed" />
  </Style>

  <!-- I/O section container style -->
  <Style x:Key="IoSectionGridStyle"
         TargetType="Grid">
    <Setter Property="Margin"
            Value="0,16,0,0" />
    <Setter Property="RowSpacing"
            Value="8" />
  </Style>

  <!-- I/O label style -->
  <Style x:Key="IoLabelStyle"
         TargetType="TextBlock">
    <Setter Property="Margin"
            Value="0,0,12,0" />
    <Setter Property="VerticalAlignment"
            Value="Center" />
  </Style>

  <!-- I/O text box style -->
  <Style x:Key="IoTextBoxStyle"
         TargetType="TextBox">
    <Setter Property="Margin"
            Value="0,0,8,0" />
  </Style>

  <!-- Action bar container style -->
  <Style x:Key="ActionBarGridStyle"
         TargetType="Grid">
    <Setter Property="Margin"
            Value="0,8,0,0" />
    <Setter Property="ColumnSpacing"
            Value="16" />
  </Style>

  <!-- Tab header with title and subtitle -->
  <Style x:Key="TabHeaderStackPanelStyle"
         TargetType="StackPanel">
    <Setter Property="VerticalAlignment"
            Value="Bottom" />
  </Style>

  <!-- Tab subtitle style -->
  <Style x:Key="TabSubtitleStyle"
         TargetType="TextBlock">
    <Setter Property="Margin"
            Value="0,4,0,0" />
    <Setter Property="Foreground"
            Value="{ThemeResource TextFillColorSecondaryBrush}" />
  </Style>

  <!-- Select All/None button panel style -->
  <Style x:Key="SelectButtonsPanelStyle"
         TargetType="StackPanel">
    <Setter Property="VerticalAlignment"
            Value="Bottom" />
    <Setter Property="Orientation"
            Value="Horizontal" />
    <Setter Property="Spacing"
            Value="8" />
  </Style>

  <!-- ListView with virtualization for file lists -->
  <Style x:Key="FileListViewStyle"
         TargetType="ListView">
    <Setter Property="SelectionMode"
            Value="None" />
    <Setter Property="ItemsPanel">
      <Setter.Value>
        <ItemsPanelTemplate>
          <ItemsStackPanel CacheLength="2.0" />
        </ItemsPanelTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Standard list item row style -->
  <Style x:Key="ListItemRowGridStyle"
         TargetType="Grid">
    <Setter Property="Margin"
            Value="0,2" />
  </Style>

</ResourceDictionary>
